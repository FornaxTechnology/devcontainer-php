// https://aka.ms/devcontainer.json
{
    "customizations": {
        "vscode": {
            "extensions": [
                // Microsoft:
                "ms-vscode-remote.remote-ssh",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools",

                // Github:
                "GitHub.copilot",
                "GitHub.remotehub",
                "GitHub.codespaces",
                "GitHub.github-vscode-theme",
                "GitHub.vscode-pull-request-github",
                "GitHub.vscode-github-actions",

                // Version control:
                "eamodio.gitlens",
                "vivaxy.vscode-conventional-commits",
                "MichaelCurrin.auto-commit-msg",
                "huizhou.githd",
                "arturock.gitstash",
                "letmaik.git-tree-compare",
                "donjayamanne.githistory",
                "mhutchie.git-graph",
                "waderyan.gitblame",

                // External diagnostics:
                "softwaredotcom.swdc-vscode",
                "Lightrun.lightrunplugin-saas",

                // External integration:
                "Ho-Wan.vscode-trello-viewer",
                "hediet.vscode-drawio",

                // General aesthetics:
                "usernamehw.errorlens",
                "vscode-icons-team.vscode-icons",
                "oderwat.indent-rainbow",
                "kamikillerto.vscode-colorize",
                "mkxml.vscode-filesize",
                "IBM.output-colorizer",

                // General tools:
                "Gruntfuggly.todo-tree",

                // General syntax:
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "IronGeek.vscode-env",
                "Kasik96.latte",
                "rohit-gohri.format-code-action",

                // General formatting:
                "tombonnike.vscode-status-bar-format-toggle",
                "esbenp.prettier-vscode",

                // General testing:
                "hbenl.vscode-test-explorer",
                "ms-vscode.test-adapter-converter",

                // PHP dependency management:
                "DEVSENSE.composer-php-vscode",

                // PHP testing and debugging:
                "xdebug.php-debug",
                "RobertOstermann.phpunit-extended-test-explorer",

                // PHP syntax:
                "bmewburn.vscode-intelephense-client",

                // PHP formatting:
                "SanderRonde.phpstan-vscode",

                // General backup:
                "xyz.local-history"
            ],
            "settings": {
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true
                },

                "task.quickOpen.showAll": false,
                "task.quickOpen.detail": true,
                "task.quickOpen.history": 20,

                "github.copilot.enable": {
                    "*": true
                },
                "github.copilot.editor.enableAutoCompletions": true,
                "github.copilot.advanced": {},

                "testExplorer.hideWhen": "never",
                "testExplorer.showOnRun": true,
                "testExplorer.useNativeTesting": false,
                "testExplorer.addToEditorContextMenu": true,
                "testExplorer.codeLens": true,
                "testExplorer.errorDecoration": true,
                "testExplorer.errorDecorationHover": true,
                "testExplorer.gutterDecoration": true,
                "testExplorer.hideEmptyLog": true,
                "testExplorer.mergeSuites": true,

                "phpunit.testExplorer.folderPattern": "tests/**/*.php",
                "phpunit.testExplorer.showOutput": "always",
                "phpunit.commandLine.showOutput": "always",
                "phpunit.args": [
                    "--testdox",
                    "--no-coverage"
                ],

                "phpstan.enabled": true,
                "phpstan.enableStatusBar": true,
                "phpstan.timeout": 100000,
                "phpstan.showProgress": true,

                "[php]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },

                "editor.formatOnPaste": false,
                "editor.formatOnType": false,
                "editor.formatOnSave": false,
                "editor.formatOnSaveMode": "file"
            }
        }
    }
}
